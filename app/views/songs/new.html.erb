<h1> Add A Song! </h1>


<% if @song.errors.any? %>
  <div id="error_explanation">
    <h4><%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:</h4>

    <ul>
      <% @song.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<%= form_with model: @song do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>

    <%= f.label :genre %>
    <%= f.text_field :genre %>

    <br>
    <%= f.label :lyrics %>
    <br>
    <%= f.text_area :lyrics, :cols => 90, :rows => 10 %>

    <br>
    <%= f.submit%>

<% end %>